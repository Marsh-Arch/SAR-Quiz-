        // QUIZ FUNCTIONS
        function initQuiz() {
            const quizContent = document.getElementById('quizContent');
            quizData.forEach((q, index) => {
                if (q.section !== currentSection) {
                    currentSection = q.section;
                    const sectionTitle = document.createElement('div');
                    sectionTitle.className = 'section-title';
                    sectionTitle.textContent = `üìñ ${currentSection}`;
                    quizContent.appendChild(sectionTitle);
                }
                const card = document.createElement('div');
                card.className = 'question-card';
                card.innerHTML = `
                    <div class="question-header">
                        <div class="question-number">${index + 1}</div>
                        <div class="question-text">${q.question}</div>
                    </div>
                    <div class="options" id="options-${index}">
                        ${q.options.map((option, optIndex) => `
                            <div class="option" onclick="selectAnswer(${index}, ${optIndex})">
                                <span class="option-letter">${String.fromCharCode(65 + optIndex)})</span>
                                <span>${option}</span>
                                <span class="check-mark"></span>
                            </div>
                        `).join('')}
                    </div>
                    <div class="answer-section" id="answer-${index}">
                        <div class="answer-label">‚úì Correct: ${String.fromCharCode(65 + q.correct)}</div>
                        <div class="explanation">${q.explanation}</div>
                    </div>
                `;
                quizContent.appendChild(card);
            });
        }

        function selectAnswer(questionIndex, selectedOption) {
            const question = quizData[questionIndex];
            const optionsDiv = document.getElementById(`options-${questionIndex}`);
            const options = optionsDiv.querySelectorAll('.option');
            const answerSection = document.getElementById(`answer-${questionIndex}`);
            const alreadyAnswered = options[0].classList.contains('disabled');
            
            if (!alreadyAnswered) {
                answeredCount++;
                if (selectedOption === question.correct) correctCount++;
            }
            options.forEach(opt => opt.classList.add('disabled'));
            options[question.correct].classList.add('correct');
            options[question.correct].querySelector('.check-mark').textContent = '‚úì';
            if (selectedOption !== question.correct) {
                options[selectedOption].classList.add('incorrect');
                options[selectedOption].querySelector('.check-mark').textContent = '‚úó';
            }
            answerSection.classList.add('show');
            updateStats();
            if (answeredCount === quizData.length) showResults();
        }

        function updateStats() {
            document.getElementById('answeredCount').textContent = answeredCount;
            document.getElementById('correctCount').textContent = correctCount;
            const percentage = answeredCount > 0 ? Math.round((correctCount / answeredCount) * 100) : 0;
            document.getElementById('scorePercent').textContent = percentage + '%';
            const progress = (answeredCount / quizData.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function showResults() {
            const percentage = Math.round((correctCount / quizData.length) * 100);
            document.getElementById('finalScore').textContent = percentage + '%';
            let grade, emoji;
            if (percentage >= 90) { grade = "Excellent! Master Level üåü"; emoji = "üéì"; }
            else if (percentage >= 80) { grade = "Very Good! üí™"; emoji = "üòä"; }
            else if (percentage >= 70) { grade = "Good! üëç"; emoji = "üôÇ"; }
            else if (percentage >= 60) { grade = "Fair üìö"; emoji = "ü§î"; }
            else { grade = "Keep Studying! üí™"; emoji = "üìñ"; }
            
            const nameInput = document.getElementById('playerName');
            const playerName = nameInput ? nameInput.value.trim() : "";
            const displayName = playerName || "Anonymous";
            
            document.getElementById('gradeMessage').innerHTML = `
                <div style="font-size: 3em; margin: 20px 0;">${emoji}</div>
                <div>${grade}</div>
                <div style="margin-top: 20px; font-size: 1.2em;">
                    ${displayName}, you got ${correctCount} out of ${quizData.length} correct!
                </div>
            `;
            document.getElementById('resultCard').classList.add('show');
            if (firebaseInitialized) saveResultToFirestore(displayName, percentage, correctCount, quizData.length);
            else document.getElementById('gradeMessage').innerHTML += `
                <div style="margin-top: 15px; font-size: 0.9em; opacity: 0.8;">
                    ‚ö†Ô∏è Leaderboard offline - score not saved
                </div>
            `;
            loadLeaderboard();
            document.getElementById('resultCard').scrollIntoView({ behavior: 'smooth' });
        }

        function restartQuiz() { location.reload(); }
        function reviewAnswers() {
            document.getElementById('resultCard').classList.remove('show');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // FIREBASE FUNCTIONS
        function saveResultToFirestore(name, percent, correct, total) {
            if (!firebaseInitialized || !db) return;
            db.collection(RESULTS_COLLECTION).add({
                name, percent, correct, total,
                timestamp: firebase.firestore.FieldValue.serverTimestamp()
            })
            .then(() => showFirebaseStatus('success', '‚úÖ Score saved to leaderboard!'))
            .catch(err => showFirebaseStatus('error', '‚ùå Could not save score'));
        }

        function loadLeaderboard() {
            const leaderboardSection = document.getElementById('leaderboardSection');
            if (!leaderboardSection) return;
            if (!firebaseInitialized || !db) {
                leaderboardSection.innerHTML = `
                    <div style="text-align: center; padding: 30px; color: #6c757d;">
                        <p style="font-size: 1.2em; margin-bottom: 10px;">üîå Leaderboard Offline</p>
                        <p>Configure Firebase to enable global leaderboard</p>
                    </div>
                `;
                return;
            }
            leaderboardSection.innerHTML = "<p style='text-align: center; color: #6c757d;'>Loading...</p>";
            db.collection(RESULTS_COLLECTION)
                .orderBy("percent", "desc")
                .orderBy("timestamp", "asc")
                .limit(10)
                .get()
                .then(snapshot => {
                    if (snapshot.empty) {
                        leaderboardSection.innerHTML = `
                            <div style="text-align: center; padding: 30px; color: #6c757d;">
                                <p style="font-size: 1.2em;">üèÜ Be the First!</p>
                                <p>Complete the quiz to claim #1!</p>
                            </div>
                        `;
                        return;
                    }
                    let html = `<table class="leaderboard-table"><thead><tr>
                        <th style="width: 60px;">Rank</th>
                        <th>Name</th>
                        <th style="width: 100px;">Score</th>
                        <th style="width: 100px;">Correct</th>
                        <th style="width: 180px;">Date</th>
                    </tr></thead><tbody>`;
                    let rank = 1;
                    snapshot.forEach(doc => {
                        const data = doc.data();
                        const date = data.timestamp ? data.timestamp.toDate().toLocaleDateString() : "-";
                        const rankEmoji = rank === 1 ? "ü•á" : rank === 2 ? "ü•à" : rank === 3 ? "ü•â" : rank;
                        html += `<tr>
                            <td style="font-weight: bold;">${rankEmoji}</td>
                            <td><strong>${data.name}</strong></td>
                            <td><span style="color: #667eea; font-weight: bold;">${data.percent}%</span></td>
                            <td>${data.correct}/${data.total}</td>
                            <td style="color: #6c757d; font-size: 0.9em;">${date}</td>
                        </tr>`;
                        rank++;
                    });
                    html += "</tbody></table>";
                    leaderboardSection.innerHTML = html;
                })
                .catch(err => {
                    leaderboardSection.innerHTML = `
                        <div style="text-align: center; padding: 30px; color: #dc3545;">
                            <p>‚ùå Could not load leaderboard</p>
                        </div>
                    `;
                });
        }

        window.onload = function() {
            initializeFirebase();
            initQuiz();
            loadLeaderboard();
        };
    </script>
</body>
</html>
